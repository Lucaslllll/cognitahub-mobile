<Article>
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: self.theme_cls.surfaceColor

        
        MDIconButton:
            icon: "arrow-left"
            style: "standard"
            on_release: root.manager.current = "course_name"
           

        ScrollView:
            scroll_timeout : 100

            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                padding: "10dp"
                spacing: "100dp"

                MDLabel:
                    # md_bg_color: 1, .8, .6, 1
                    id: title_article
                    font_style: "Display"
                    bold: True
                    halign: "center"
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    text: root.title_example


                
                
        
                MDInteractiveLabel:
                    id: details_article
                    text: root.text_example
                


                MDLabel:
                    id: date_article
                    halign: "center"
                    valign: "center"
                    text: "Date"


                GridLayout:
                    id: categories_article
                    rows: 10
                    cols: 5
                    spacing: "10dp"
                    size_hint_y: None
                    height: self.minimum_height
                    

                    MDLabel:    
                        halign: "left"
                        bold: True
                        text: "Course: "



                BoxLayout:
                    orientation: "vertical"
                    spacing: "40dp"

                    MDLabel:    
                        halign: "left"
                        bold: True
                        text: "Actions:"

                    BoxLayout:
                        orientation: "horizontal"
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: "20dp"

                        MDIconButton:
                            id: id_like
                            icon: "thumb-up"
                            pos_hint: {"center_x": 0.5}
                            theme_text_color: "Custom"
                            on_release: root.do_like()

                        MDIconButton:
                            id: id_favorite
                            icon: "star"
                            pos_hint: {"center_x": 0.5}
                            theme_text_color: "Custom"
                            on_release: root.do_favorite()

                        MDIconButton:
                            id: id_report
                            icon: "alert-octagon"
                            pos_hint: {"center_x": 0.5}
                            theme_text_color: "Custom"
                            on_release: root.manager.current = "about_name"


                        Arroba:
                            id: author_annotation
                            size_hint_y: None
                            height: self.texture_size[1]
                            text_size: self.width, None      
                            pos_hint: {"center_x": 0.9, "center_y": 0.5}
                            text: "Author: Lucaslllll"
                            theme_text_color: "Custom"
                            text_color: 0.3, 0.3, 1, 1
                            on_release: root.go_profile()



