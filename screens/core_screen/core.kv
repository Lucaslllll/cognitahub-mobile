<Core>


    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: self.theme_cls.backgroundColor

        MDScreenManager:
            id: id_screen_manager

            Screen:
                name: "Screen 1"
                
                MDBoxLayout:
                    orientation: "vertical"

                    MDBoxLayout:
                        orientation: "vertical"
                        
                        MDLabel:
                            text: "Courses: "

                        MDSwiper:
                            id: id_swiper_course
                            size_hint_y: None
                            height: 300
                            y: root.height - self.height - dp(20)

                            

                        BoxLayout:

                
            


            Screen:
                name: "Screen 2"
                
                MDBoxLayout:
                    orientation: "vertical"
                    

                    ScrollView:
                        do_scroll_x: False

                        BoxLayout:
                            id: id_scroll
                            orientation: "vertical"
                            size_hint_y: None
                            height: self.minimum_height
                
                        

                    

            
            Screen:
                name: "Screen 3"
                


        MDNavigationBar:

            MDNavigationItem:
                on_release: root.change_screen("Screen 1")

                MDNavigationItemIcon: 
                    icon: "school"
                MDNavigationItemLabel: 
                    text: "My Courses"
                

            MDNavigationItem:
                on_release: root.change_screen("Screen 2")

                MDNavigationItemIcon: 
                    icon: "forum"
                MDNavigationItemLabel: 
                    text: "Forum"

            MDNavigationItem:
                on_release: root.change_screen("Screen 3")

                MDNavigationItemIcon: 
                    icon: "cog"
                MDNavigationItemLabel: 
                    text: "Settings"





<ListItemCustom>:




<CardSwiper>:

    FitImage:
        source: root.img_url
        radius: [dp(20),]
