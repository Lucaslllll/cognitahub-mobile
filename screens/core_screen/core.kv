<Core>


    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: self.theme_cls.backgroundColor

        MDScreenManager:
            id: id_screen_manager

            Screen:
                name: "Screen 1"
                
                MDBoxLayout:
                    orientation: "vertical"

                    MDBoxLayout:
                        orientation: "vertical"
                        spacing: "20dp"

                        MDLabel:
                            text: "Courses "
                            font_style: "Display"
                            #role: "small"
                            
                        

                        MDSwiper:
                            id: id_swiper_course
                            size_hint_y: None
                            height: "350dp"
                            y: root.height - self.height - dp(20)
                            

                        BoxLayout:

                
            


            Screen:
                name: "Screen 2"
                
                MDBoxLayout:
                    orientation: "vertical"
                    
                    MDTopAppBar:

                        MDTopAppBarTitle:
                            text: "Feel free to post any questions"
                            pos_hint: {"center_x": .5}

                        MDTopAppBarTrailingButtonContainer:

                            MDActionTopAppBarButton:
                                icon: "plus"
                                on_release: root.manager.current = "create_topic_name"

                    MDDivider:

                    ScrollView:
                        do_scroll_x: False

                        BoxLayout:
                            id: id_scroll
                            orientation: "vertical"
                            size_hint_y: None
                            height: self.minimum_height
                
                        

                    

            
            Screen:
                name: "Screen 3"

                # MDList:
                #     id: content_settings

                MDSliverAppbar:
                    background_color: app.theme_cls.secondaryColor
                    hide_appbar: False

                    MDTopAppBar:
                        type: "medium"

                        MDTopAppBarLeadingButtonContainer:

                            MDActionTopAppBarButton:
                                icon: "arrow-left"
                                on_release: root.change_screen("Screen 1")

                        MDTopAppBarTitle:
                            text: "Settings"

                        MDTopAppBarTrailingButtonContainer:

                            MDActionTopAppBarButton:
                                icon: "attachment"

                            MDActionTopAppBarButton:
                                icon: "calendar"

                            MDActionTopAppBarButton:
                                icon: "dots-vertical"

                    MDSliverAppbarHeader:

                        FitImage:
                            source: "assets/img/cognitahub-logo-re.png"

                    MDSliverAppbarContent:
                        id: content_settings
                        orientation: "vertical"
                        padding: "12dp"
                        spacing: "20dp"
                        theme_bg_color: "Custom"
                        md_bg_color: app.theme_cls.secondaryColor

                        

                       



        MDNavigationBar:

            MDNavigationItem:
                on_release: root.change_screen("Screen 1")

                MDNavigationItemIcon: 
                    icon: "school"
                MDNavigationItemLabel: 
                    text: "My Courses"
                

            MDNavigationItem:
                on_release: root.change_screen("Screen 2")

                MDNavigationItemIcon: 
                    icon: "forum"
                MDNavigationItemLabel: 
                    text: "Forum"

            MDNavigationItem:
                on_release: root.change_screen("Screen 3")

                MDNavigationItemIcon: 
                    icon: "cog"
                MDNavigationItemLabel: 
                    text: "Settings"





<ListItemTopic>:
    on_release: root.change_screen()




<CardSwiper>:
    on_release: root.change_screen("course_name")

    MDBoxLayout: 
        orientation: "vertical"
        md_bg_color: app.theme_cls.surfaceColor
        size_hint_y: None
        height: root.height
        radius: 30

        FitImage:
            source: root.img_url
            radius: [dp(15),]
            size_hint_y: 3
            
        MDLabel:
            size_hint_y: 1
            padding: 10
            halign: "center"
            text_color: "white"
            text: root.title
            bold: True

